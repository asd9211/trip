<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.org.trip.mapper.AdminMapper">
	<select id="getAdminList" resultType="admin">
		select * from admin_info
	</select>
	<select id="getAdmin" resultType="admin">
		select * from admin_info where admin_num = #{admin_num}
	</select>
	<insert id="insertAdmin">
		insert into admin_info
		values(seq_admin_num.nextval,#{admin_name},#{admin_id},#{admin_pwd})
	</insert>
	<update id="updateAdmin">
		update admin_info
		<trim prefix="set" suffixOverrides=",">
			<if test="adminName!=null">admin_name=#{adminName},</if>
			<if test="adminId">admin_id=#{adminId},</if>
			<if test="adminPwd">admin_pwd=#{adminPwd},</if>
		</trim>
		where admin_num = #{adminNum}
	</update>
	<delete id="deleteAdmin">
		delete from admin_info where admin_num = #{adminNum}
	</delete>
</mapper>